<%# Renders a single feature card. Locals: title:, description:, path:, button_label: (optional), icon_class:, button_variant: (e.g. "primary", "outline-success"), extra_buttons: (array of [label, path] for extra links) %>
<div class="col-12 col-md-6 col-lg-4">
  <div class="card h-100 border shadow-sm">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title d-flex align-items-center">
        <% if local_assigns[:icon_class].present? %>
          <i class="fa <%= icon_class %> me-2" aria-hidden="true"></i>
        <% end %>
        <%= title %>
      </h5>
      <p class="card-text text-muted small flex-grow-1"><%= description %></p>
      <div class="d-flex flex-wrap gap-1 align-items-center">
        <%= link_to button_label || "Open", path, class: "btn btn-#{button_variant || 'outline-primary'} btn-sm" %>
        <% if local_assigns[:extra_buttons].present? %>
          <% extra_buttons.each do |lbl, url| %>
            <%= link_to lbl, url, class: "btn btn-outline-dark btn-sm" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
