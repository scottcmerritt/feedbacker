<% id = "myTabContent" if (local_assigns[:id].nil?) %>
<% content = tabs if (local_assigns[:content].nil?) %>
<% wrap_css = "p-2" if local_assigns[:wrap_css].nil? %>
<div class="tab-content border border-top-0 <%= wrap_css %>" id="<%= id %>">
<% tabs.each do |tab_row| %>
	<% key = tab_row.is_a?(Feedbacker::UiTab) ? tab_row.tab_key : tab_row %>

		<% firstClass = "" %>
		<% if tabs.first == tab_row %>
		<% firstClass = " show active" %>
		<% end %>
		<div class="tab-pane fade<%= firstClass %>" id="<%= key.to_s %>" role="tabpanel" aria-labelledby="<%= key.to_s %>-tab">
			<% if content.is_a? Array %>
			<%= key.to_s %> tab
			<% else %>
			<%= content[key] %>
			<% end %>
			
		</div>
<% end %>
</div>