<p id="notice"><%= notice %></p>
<%= link_to "Edit settings", feedbacker.admin_path %>
<h2><%= @post.title %></h2>
<p class="px-2">
  by <strong>User <%= @post.user_id %></strong>
</p>

<% if @post.respond_to?(:details) %>
<div class="bg-white border p-2 my-2">
  <strong>Content:</strong>
  <%= @post.details %>
</div>
<% end %>

<%= feedbacker_comments target: @post, new_comment: @new_comment %>

<%= render partial: "comments/template", locals: {commentable: @post, new_comment: @new_comment} if false %>

<%= commontator_thread(@post) if false %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
