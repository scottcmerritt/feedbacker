<% user = current_user if local_assigns[:user].nil? %>
<% selected = :main if local_assigns[:selected].nil? %>
<% links = [["Overview",[main_app,user],:main]] %>
<% links.push ["News",newsify.user_path(user),:newsify] if respond_to?(:newsify) %>
<% links.push ["Interests", newsify.profile_interests_path(id:user.id), :interests] if respond_to?(:newsify) %>


<div class="my-1 d-flex align-items-stretch border-bottom border-2 border-dark fs-6">
	<div class="me-auto px-2">
	<%= user.comments.count %> <%= dbt("comment".pluralize(user.comments.count)) %>
	</div>

	<% if false %>
	<span class="fw-bold font-weight-bold ms-1 fs-7 align-items-center d-flex">Profiles</span> <% end %>

	<% links.each_with_index do |link,index| %>
		<% if selected != link[2] %>
		<%= link_to link[0], link[1], class: "p-1 mx-1" %>
		<% else %>
		<%= tag.div link[0], class: "bg-dark text-light px-2 mx-1 align-items-center d-flex" %>
		<% end %>
	<% end %>
	
	
</div>